<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dollosojap.androidtrainingapp.Activity2A">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/imageView"
            android:layout_height="100dp"
            android:src="@drawable/person"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textDisplayFullname"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp">

        <TableRow
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp">
            <ImageView android:id="@+id/imageView2"
                android:layout_column="1"
                android:layout_height="60dp"
                android:src="@drawable/dropbox"
                android:layout_weight="1" />
            <ImageView android:id="@+id/imageView3"
                android:layout_column="1"
                android:layout_height="60dp"
                android:src="@drawable/messenger"
                android:layout_weight="1" />
            <ImageView android:id="@+id/imageView4"
                android:layout_column="1"
                android:layout_width="20dp"
                android:layout_height="60dp"
                android:src="@drawable/send"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp">
            <ImageView android:id="@+id/imageView5"
                android:layout_column="1"
                android:layout_height="60dp"
                android:src="@drawable/spotify"
                android:layout_weight="1" />
            <ImageView android:id="@+id/imageView6"
                android:layout_height="60dp"
                android:layout_column="1"
                android:src="@drawable/music"
                android:layout_weight="1" />
            <ImageView android:id="@+id/imageView7"
                android:layout_column="1"
                android:layout_height="60dp"
                android:src="@drawable/torrent"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView android:id="@+id/imageView8"
                android:layout_column="1"
                android:layout_height="60dp"
                android:src="@drawable/app"
                android:layout_weight="1" />
            <ImageView android:id="@+id/imageView9"
                android:layout_column="1"
                android:layout_height="60dp"
                android:src="@drawable/heart"
                android:layout_weight="1" />
            <ImageView android:id="@+id/imageView10"
                android:layout_column="1"
                android:layout_height="60dip"
                android:src="@drawable/logout"
                android:layout_weight="1"
                android:onClick="Logout"/>
        </TableRow>
    </TableLayout>


</RelativeLayout>
